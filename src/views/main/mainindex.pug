extends ../layout.pug
block content
    //- Main content
    div(class='flex-1 flex flex-col')
        //- Top navbar
        nav(class='bg-white border-b p-4 flex justify-between items-center')
            div(class='text-xl font-semibold') Dashboard

        //- Dashboard content
        main(class='flex-1 p-6 bg-gray-100')
            h1(class='text-2xl font-semibold mb-6') Overview
            
            //- Metrics section
            div(class='grid grid-cols-4 gap-6')
                div(class='bg-white p-4 rounded shadow')
                    h2(class='text-lg font-semibold') Total Albums
                    p(class='text-3xl font-bold' id='total-albums') 0
                div(class='bg-white p-4 rounded shadow')
                    h2(class='text-lg font-semibold') Total Playlists
                    p(class='text-3xl font-bold' id='total-playlists') 0
                div(class='bg-white p-4 rounded shadow')
                    h2(class='text-lg font-semibold') Total Audios
                    p(class='text-3xl font-bold' id='total-audios') 0
                div(class='bg-white p-4 rounded shadow')
                    h2(class='text-lg font-semibold') Total Users
                    p(class='text-3xl font-bold' id='total-users') 0

            //- Recent activity or additional content
            div.mt-10
            h2(class='text-xl font-semibold mb-4') Recent Activity
            div(class='bg-white p-4 rounded shadow')
                p No recent activity.

    //- Reference the external JavaScript file
    script(src='./layout.js')